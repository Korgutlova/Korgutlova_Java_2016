<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="1603171213_1" author="korgutlova">
        <createTable tableName="posts">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_receiver" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="user_sender" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="text" type="varchar(1000)"/>
            <column name="date" type="datetime"/>
        </createTable>
    </changeSet>

    <changeSet id="1603171213_2" author="korgutlova">
        <addForeignKeyConstraint baseTableName="posts"
                                 baseColumnNames="user_receiver"
                                 constraintName="post_user_receiver_fk"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>
    <changeSet id="1603171213_3" author="korgutlova">
        <addForeignKeyConstraint baseTableName="posts"
                                 baseColumnNames="user_sender"
                                 constraintName="post_user_sender_fk"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>